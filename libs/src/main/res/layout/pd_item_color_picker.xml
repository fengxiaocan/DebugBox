<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_sure"
            android:text="确定"
            android:layout_alignParentRight="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:text="@string/alpha_color"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/alpha_seek_bar"
        android:thumbTint="#1E90FF"
        android:progress="255"
        android:layout_marginTop="10dp"
        android:max="255"
        android:progressTint="#ADD8E6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/red_color"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/red_seek_bar"
        android:thumbTint="#FF0000"
        android:progress="0"
        android:max="255"
        android:layout_marginTop="10dp"
        android:progressTint="#FF6347"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/green_color"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/green_seek_bar"
        android:thumbTint="#32CD32"
        android:progress="0"
        android:layout_marginTop="10dp"
        android:max="255"
        android:progressTint="#00FF7F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/blue_color"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/blue_seek_bar"
        android:thumbTint="#6495ED"
        android:progress="0"
        android:layout_marginTop="10dp"
        android:max="255"
        android:progressTint="#1E90FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_color"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="25sp"
        android:gravity="center"
        android:text="0xFF000000"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>